{

    "manifest_version":3,
    "name":"BetterYouTube",
    "version":"1.0",

    "description" : "A Firefox extension designed to filter unwanted content from YouTube",

    "icons":{
        "48": "Icons/BetterYouTubeIcon48.png",
        "64": "Icons/BetterYouTubeIcon64.png"
    },

    "content_scripts":[
        {
            "matches":["https://www.youtube.com/*", "https://www.rebuy.de/verkaufen/suche?query=978-3-507-86264-7"],
            "js": ["background.js"]
        }
    ],

    "permissions": ["tabs", "contextMenus","webRequest", "browser_action", "activeTab", "https://www.youtube.com/*", "https://www.youtube.com/*/*", "https://www.rebuy.de/verkaufen/suche?query=978-3-507-86264-7"],

    "host_permissions":[
        "https://www.youtube.com/*"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "browser_specific_settings": {
        "gecko": {
          "id": "BetterYouTube@69364854-401d-40ca-a6c1-3d3fe903884b",
          "strict_min_version": "55.0"
        }
      }
}